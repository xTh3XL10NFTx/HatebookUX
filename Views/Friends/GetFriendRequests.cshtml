@model IEnumerable<Friends>

<style>
    .friend-container {
        display: flex;
        flex-direction: column; /* Set the flex direction to column */
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

        .friend-container:last-child {
            border-bottom: none;
        }

    .friend-profile-picture {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        overflow: hidden;
    }

        .friend-profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

    .friend-details {
        margin-top: 20px; /* Adjust margin top instead of margin left */
    }

    .friend-name {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 5px;
    }

    .friend-description {
        font-weight: bold;
        font-size: 12px;
        margin-bottom: 5px;
    }

    .friend-email {
        color: #888;
        margin-bottom: 5px;
    }

    .friend-gender-birthday {
        color: #888;
    }
</style>

<div>
    @foreach (var row in Model)
    {
        <div class="friend-container">
            <div class="friend-details">
                <div class="friend-name">@row.sender</div>
            </div>
        </div>
    }
</div>
