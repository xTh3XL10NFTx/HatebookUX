@model IEnumerable<Groups>

<style>
    .group-container {
        display: flex;
        flex-direction: column; /* Set the flex direction to column */
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

        .group-container:last-child {
            border-bottom: none;
        }

    .group-profile-picture {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        overflow: hidden;
    }

        .group-profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

    .group-details {
        margin-top: 20px; /* Adjust margin top instead of margin left */
    }

    .group-name {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 5px;
    }

    .group-description {
        font-weight: bold;
        font-size: 12px;
        margin-bottom: 5px;
    }

    .group-email {
        color: #888;
        margin-bottom: 5px;
    }

    .group-gender-birthday {
        color: #888;
    }
</style>

<div>
    @foreach (var row in Model)
    {
        <div class="group-container">
            <div class="group-details">
                <div class="group-name">@row.name</div>
                <div class="group-description">@row.description</div>
            </div>
        </div>
    }
</div>
